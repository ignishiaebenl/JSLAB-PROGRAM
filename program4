<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <style>
        .slider{
            text-align: center;
            height: 400px;
            width: 60%;
            margin: auto;
            position: relative;
        }
        .slider img{
            height: 145%;
            width: 100%;
            object-fit: contain;
        }
        button{
            padding: 20px;
            border: none;
            background-color: gray;
            border-radius:10px ;

        }
    </style>
</head>
<body>
    <div class="slider">
        <img src="./images.jfif"alt="" id="displayimg">
        <button id="next">next</button>
        <button id="prev">previous</button>        

    </div>
    <script>
        let img=["images.jfif","images (2).jfif","images (1).jfif","download.jfif","download (1).jfif"]
        let currentIndex=0;
        let display=document.getElementById("displayimg");
        let previousBTn=document.getElementById("prev");
        let nextBTn=document.getElementById("next");
        nextBTn.addEventListener("click",()=>{
            currentIndex=(currentIndex+1) % img.length;
            display.src=img[currentIndex];
        });
        previousBTn.addEventListener("click", () => {
            currentIndex = (currentIndex - 1 + img.length) % img.length; 
            display.src =img[currentIndex];
        });
        setInterval(()=>{
             currentIndex=(currentIndex+1) % img.length;
              display.src=img[currentIndex];
        },2000);
    </script>
</body>
</html>
